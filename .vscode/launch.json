    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "command": "npm run start:dev",
        "name": "Run npm start",
        "request": "launch",
        "type": "node-terminal"
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Backend",
        "port": 5630,
        "remoteRoot": "/home/node/app",
        "localRoot": "${workspaceFolder}/",
        "restart": true,
        "sourceMapPathOverrides": {
          "/home/node/app/*": "${workspaceFolder}/*"
        },
      }
    ]
  }
